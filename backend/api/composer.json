{
    "name": "ai/backend-api",
    "description": "REST API for AI Backend",
    "type": "project", 
    "license": "proprietary",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "."
        }
    },
    "scripts": {
        "test": "./phpunit tests/",
        "test-coverage": "./phpunit tests/ --coverage-html coverage-report --coverage-text"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}